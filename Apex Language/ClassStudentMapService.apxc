public class ClassStudentMapService {
    public static Map<Id,Set<Id>> getMapOfClassStudentSet(){
        Map<Id,Set<Id>> MapOfClassStudentSetId = new Map<Id,Set<Id>>();
        for(Class__c klass:[SELECT Id,(SELECT Id FROM Students__r) FROM CLASS__c]){
            Map<Id,Student__c> MapOfStudents = new Map<Id,Student__c>(klass.students__r);
        MapOfClassStudentSetId.put(klass.Id,MapOfStudents.keySet());
        }
        return MapOfClassStudentSetId;
    }
}